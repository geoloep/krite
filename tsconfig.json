{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": false,
        "outDir": "lib",
        "isolatedModules": false,
        "noImplicitThis": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "strictPropertyInitialization": false,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*",
        "types/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
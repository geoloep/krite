{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.core",
            "scripthost"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "allowJs": false,
        "outDir": "lib",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "noImplicitThis": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*",
        "types/*"
    ],
    "exclude": [
        "node_modules",
        "src/apps"
    ]
}